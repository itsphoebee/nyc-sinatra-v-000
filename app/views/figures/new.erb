<h1> Create a Figure</h1>

<form method="post" action="/figures">
  <label> Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name"></input>
  <br></br>

  <label> Choose a title for the figure </label>
  <br></br>
  <%Title.all.each do |t|%>
    <input id="title_<%=t.id%>" type="checkbox" name="figure[title_ids][]" value="<%=t.id%>"><%=t.name%></input>
  <%end%>
  <br></br>

  <label> or create a new title: </label>
  <input type="text" name="title[name]" id="new_title"></input>
  <br></br>

  <label> Choose an existing landmark to associate</label>
  <br></br>
  <%Landmark.all.each do |c|%>
    <input id="landmark_<%=c.id%>" type="radio" name="category_id" value="<%=c.id%>"><%=c.name%></input>
    
  <%end%>
  <br></br>

  <label> or create a new landmark </label>
  <br></br>
  <label> Landmark Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <br></br>
  <label> Year Completed: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <br></br>

  <input type="submit" value="Create New Figure"></input>
</form>
