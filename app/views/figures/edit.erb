<h1> Edit Figure </h1>

<form method="post" action="/figures/<%=@figure.id%>">
  <label> Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></input>
  <br></br>

  <label> Choose a title for the figure </label>
  <br></br>
  <%Title.all.each do |t|%>
    <input id="<%t.id%>" type="checkbox" name="figure[title_ids][]" value="<%=t.id%>"><%='checked' if @figure.titles.include?(t)%><%t.name%></input>
  <%end%>
  <br></br>

  <label> or create a new title: </label>
  <input type="text" name="title[name]" id="new_title"></input>
  <br></br>

  <label> Choose an existing landmark to associate</label>
  <br></br>
  <%Landmark.all.each do |l|%>
    <input id="<%l.id%>" type="checkbox" name="figure[landmark_ids][]"><%='checked' if @figure.landmarks.include?(l)%><%=l.name%></input>
  <%end%>
  <br></br>

  <label> or create a new landmark </label>
  <br></br>
  <label> Landmark Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <br></br>
  <label> Year Completed: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"></input>
  <br></br>

  <input type="submit" value="Edit Figure"></input>
</form>
